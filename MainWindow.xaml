<Window x:Class="FanGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FanGB"
        mc:Ignorable="d"
        Title="FanGB" Height="450" Width="800">
    <DockPanel>
        <TabControl TabStripPlacement="Top">
            <TabItem Header="Monitor">
                <TabItem.Content>
                    Display system information like temperature and current fan speeds
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Fans">
                <TabItem.Content>
                    Set fan controls here.
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Lighting">
                <TabItem.Content>
                    Set system lighting here
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
